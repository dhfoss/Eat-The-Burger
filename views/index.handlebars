<div class="container">
    <div class="text-center">
        <h1 class="display-1">Welcome to Tofu Sam's Burger Jam</h1>
    </div>
    
    <div class="text-center">
        <img src="/assets/img/burger_pic.png" alt="burger pic" class="rounded my-3">
    </div>


    <div class="container">
        <div class="row">

            <div class="col">
                <div class="text-center">
                    <h2>Burger Orders</h2>
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burgers/burger-block devoured=false}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="col">
                <div class="text-center">

                    <h2>Devoured Burgers</h2>
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                {{> burgers/burger-block devoured=true}}
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>

        </div>
    </div>


    <h2>Place an Order</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input id="burger" name="name" type="text">
        </div>
        <br>
        <button type="submit">Order a burger</button>
    </form>
    <br>
</div>